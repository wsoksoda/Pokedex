<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="create_egg_group_connection_table" author="wsoksoda">
        <createTable tableName="egg_group_connection">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pokemon_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="egg_group_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>
    <changeSet id="Load type connection from CSV file" author="wsoksoda">
        <loadData tableName="egg_group_connection" file="db/csv/EggConnection.csv">
            <column name="id" header="id" />
            <column name="pokemon_id" header="pokemon_id" />
            <column name="egg_group_id" header="egg_group_id" />
        </loadData>
    </changeSet>
    <changeSet id="foreign Key Egg" author="wsoksoda">
        <addForeignKeyConstraint baseTableName="egg_group_connection" baseColumnNames="pokemon_id" constraintName="fk_pokemonID" referencedTableName="pokemon"
                                 referencedColumnNames="id"></addForeignKeyConstraint>
        <addForeignKeyConstraint baseTableName="egg_group_connection" baseColumnNames="egg_group_id" constraintName="fk_EggID" referencedTableName="egg_group"
                                 referencedColumnNames="id"></addForeignKeyConstraint>
    </changeSet>
</databaseChangeLog>