<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="create_stats_table" author="wsoksoda">
        <createTable tableName="stats">
            <column name="pokemon_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="hp" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="speed" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="attack" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="defense" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="special_attack" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="special_defense" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>