<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="create_ability_connection_table" author="wsoksoda">
        <createTable tableName="ability_connection">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="pokemon_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ability_id" type="bigint">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="Load type connection from CSV file" author="wsoksoda">
        <loadData tableName="ability_connection" file="db/csv/AbilityConnection.csv">
            <column name="id" header="id" />
            <column name="pokemon_id" header="pokemon_id" />
            <column name="ability_id" header="ability_id" />
        </loadData>
    </changeSet>
    <changeSet id="foreign Key Ability" author="wsoksoda">
        <addForeignKeyConstraint baseTableName="ability_connection" baseColumnNames="pokemon_id" constraintName="fk_pokemonID" referencedTableName="pokemon"
                                 referencedColumnNames="id"></addForeignKeyConstraint>
        <addForeignKeyConstraint baseTableName="ability_connection" baseColumnNames="ability_id" constraintName="fk_abilityID" referencedTableName="abilities"
                                 referencedColumnNames="id"></addForeignKeyConstraint>
    </changeSet>
</databaseChangeLog>